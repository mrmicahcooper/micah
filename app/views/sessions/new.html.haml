%article
  = form_tag :create_session, method: :post do
    %fieldset
      %dl
        %dt= label_tag :email
        %dd= text_field_tag :email, nil, autofocus: true

        %dt= label_tag :password
        %dd= password_field_tag :password

      .actions
        = submit_tag 'sign in', class: 'button'
