          %h1<>
            M
            %span<> i
            c
            %span<> a
            h Co
            %span<> o
            p
            %span<> e
            r
        %nav.social_links
          = link_to "Hashrocket", "http://hashrocket.com/people/micah-cooper", class: "hashrocket"
          = link_to "Twitter", "http://twitter.com/mrmicahcooper", class: "twitter"
          = link_to "Github", "http://github.com/mrmicahcooper", class: "github"
